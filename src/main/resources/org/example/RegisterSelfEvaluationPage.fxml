<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.gui.controller.RegisterSelfEvaluationController"
            fitToWidth="true">
    <content>
        <VBox spacing="20" padding="20">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Autoevaluación">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </HBox>

            <Label text="Favor de completar los siguientes campos" />

            <GridPane hgap="10" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="200"/>
                    <ColumnConstraints halignment="LEFT" minWidth="200"/>
                </columnConstraints>

                <Label text="Follow-up Grade" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="followUpGrade" promptText="Selecciona un número" prefWidth="200"
                          GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Safety Grade" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="safetyGrade" promptText="Selecciona un número" prefWidth="200"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Knowledge Application Grade" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="knowledgeApplicationGrade" promptText="Selecciona un número" prefWidth="200"
                          GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Interesting Grade" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="interestingGrade" promptText="Selecciona un número" prefWidth="200"
                          GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Productivity Grade" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="productivityGrade" promptText="Selecciona un número" prefWidth="200"
                          GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Congruent Grade" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="congruentGrade" promptText="Selecciona un número" prefWidth="200"
                          GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Informed by Organization" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <ComboBox fx:id="informedByOrganization" promptText="Selecciona un número" prefWidth="200"
                          GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="Regulated by Organization" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <ComboBox fx:id="regulatedByOrganization" promptText="Selecciona un número" prefWidth="200"
                          GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <Label text="Importance for Professional Development" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <ComboBox fx:id="importanceForProfessionalDevelopment" promptText="Selecciona un número" prefWidth="200"
                          GridPane.rowIndex="8" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" padding="10 0 0 0">
                <Button text="Registrar Evaluación"
                        onAction="#handleRegister"
                        prefWidth="200"/>
            </HBox>
        </VBox>
    </content>
</ScrollPane>

