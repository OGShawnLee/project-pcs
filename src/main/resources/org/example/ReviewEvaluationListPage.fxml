<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@main.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.gui.controller.ReviewEvaluationListController">
    <content>
        <AnchorPane fx:id="container" prefHeight="720.0" prefWidth="1280.0">
            <VBox layoutX="172.0" prefWidth="950.0" spacing="16.0">
                <children>

                    <!-- Título -->
                    <Label text="Lista de Evaluaciones" styleClass="title"/>

                    <!-- Botones de acción -->
                    <HBox alignment="CENTER_LEFT" spacing="32.0" prefHeight="32.0">
                        <HBox alignment="CENTER" spacing="16.0">
                            <Button text="Volver a Inicio" onMouseClicked="#navigateToLandingPage" styleClass="button"/>
                            <Button text="Registrar Evaluación" onMouseClicked="#handleOpenRegisterEvaluationModal" styleClass="button"/>
                            <Button text="Editar Evaluación" onMouseClicked="#handleVisualizeEvaluationModal" styleClass="button"/>
                        </HBox>
                    </HBox>

                    <!-- Tabla de evaluaciones -->
                    <TableView fx:id="tableEvaluation" prefHeight="605.0" prefWidth="1013.0">
                        <columns>
                            <TableColumn fx:id="columnIDAcademic" text="Estudiante" prefWidth="180.0" styleClass="column"/>
                            <TableColumn fx:id="columnIDProject" text="Proyecto" prefWidth="180.0" styleClass="column"/>
                            <TableColumn fx:id="columnIDStudent" text="Técnica" prefWidth="80.0" styleClass="column"/>
                            <TableColumn fx:id="columnCreatedAt" text="Fecha" prefWidth="150.0" styleClass="column"/>
                        </columns>
                    </TableView>

                </children>
                <padding>
                    <Insets top="32.0" bottom="32.0"/>
                </padding>
            </VBox>
        </AnchorPane>
    </content>
</ScrollPane>
