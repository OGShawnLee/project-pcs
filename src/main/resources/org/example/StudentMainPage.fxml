<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.gui.controller.StudentMainController"
      prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutX="160.0" layoutY="40.0" text="Menú Principal Estudiante">
            <font>
                <Font size="24.0" />
            </font>
        </Label>

        <Button layoutX="50.0" layoutY="120.0" mnemonicParsing="false" text="Actualizar datos"
                onAction="#handleUpdateStudentAction" />

        <Button layoutX="50.0" layoutY="170.0" mnemonicParsing="false" text="Ver proyecto"
                onAction="#handleReviewStudentProjectAction" />

        <Button layoutX="50.0" layoutY="220.0" mnemonicParsing="false" text="Registrar autoevaluación"
                onAction="#handleRegisterSelfEvaluationAction" />

        <Button layoutX="350.0" layoutY="120.0" mnemonicParsing="false" text="Solicitar proyecto"
                onAction="#handleRegisterProjectRequestAction" />

        <Button layoutX="350.0" layoutY="170.0" mnemonicParsing="false" text="Registrar reporte mensual"
                onAction="#handleRegisterMonthlyReportAction" />
    </children>
</Pane>
